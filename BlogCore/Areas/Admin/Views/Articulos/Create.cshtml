@model BlogCore.Models.ViewModels.ArticuloVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center"> Crear un nuevo artículo></h3>
<form method="post" asp-action="Create" enctype="multipart/form-data"> @* Para subida de archivos *@
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">

            <div class="form-group row">
                <div class="col-4 mt-2">
                    <label asp-for="Articulo.Nombre"></label>
                </div>
                <div class="col-8 mt-2">
                    <input asp-for="Articulo.Nombre" class="form-control" />
                    <span asp-validation-for="Articulo.Nombre" class="taxt-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4 mt-2">
                    <label asp-for="Articulo.Descripcion"></label>
                </div>
                <div class="col-8 mt-2">
                    <textarea asp-for="Articulo.Descripcion" class="form-control" style="height:300px;"></textarea>
                    <span asp-validation-for="Articulo.Descripcion" class="taxt-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4 mt-2">
                    <label asp-for="Articulo.CategoriaId"></label>
                </div>
                <div class="col-8 mt-2">
                    @Html.DropDownListFor(m=>m.Articulo.CategoriaId, Model.ListaCategorias,
                   "-Por favor selecciones una categoría-", new {@class="form-control"})                    
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4  mt-2">
                    <label asp-for="Articulo.UrlImagen"></label>
                </div>
                <div class="col-8 mt-2">
                    <input type="file" name="archivos" id="subidaArchivo" class="form-control" />                    
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4 mt-2">
                    <partial name="_VistaCrearVolver" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{ 
    <script src="https://cdn.tiny.cloud/1/bd6kcef55vg5cp3du45hm6rhyl75ac2860vwg7jo6jsate23/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        })
    </script>
}

    