@model BlogCore.Models.Slider

@{ 
    ViewData["Title"] = "Editar Articulo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center"> Editar Slider</h3>

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    @* Para subida de archivos *@
    <input type="hidden" asp-for="Id" />
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8 mt-4">

            <div class="form-group row">
                <div class="col-4 mt-2">
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-8 mt-2">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4 mt-2">
                    <label asp-for="Estado"></label>
                </div>
                <div class="col-8 mt-2">
                    <input asp-for="Estado" class="form-control" />
                    <span asp-validation-for="Estado" class="taxt-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4  mt-2">
                    <label asp-for="UrlImagen"></label>
                </div>
                <div class="col-8 mt-2">
                    <input type="file" name="archivos" id="subidaArchivo" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4 mt-2">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Id"><i class="fas fa-edit"></i> Actualizar</button>

                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control"><i class="fas fa-reply-all"></i> Volver a vista</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-4 pt-3">
            <img src="@Model.UrlImagen" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
        </div>
    </div>
</form>

@section Scripts{

}

