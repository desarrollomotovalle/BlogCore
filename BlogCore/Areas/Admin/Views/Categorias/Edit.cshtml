@model BlogCore.Models.Categoria
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center"> Editar categoría</h3>
<form method="post" asp-action="Edit">
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4 mt-2">
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-8 mt-2">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="taxt-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4  mt-2">
                    <label asp-for="Orden"></label>
                </div>
                <div class="col-8 mt-2">
                    <input asp-for="Orden" class="form-control" />
                    <span asp-validation-for="Orden" class="taxt-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4 mt-2">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Id"><i class="fas fa-edit"></i> Actualizar</button>
                            
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control"><i class="fas fa-reply-all"></i> Volver a vista</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

